        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-danger" accesskey="x">E<u>x</u>cluir</button>
            <a class="btn btn-outline-secondary" asp-action="Index" accesskey="v"><u>V</u>oltar</a>
        </div>
    </form>
</div>
